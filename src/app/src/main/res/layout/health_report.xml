<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.cuhk.fedcampus.health.health.fragment.ReportFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:text="@string/health_report" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature" />

            <EditText
                android:id="@+id/editTemp"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSleepTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleeping_time" />

            <EditText
                android:id="@+id/editSleepTime"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:text="@string/weekly_health_report" />


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_blue_light"
        android:stretchColumns="-1">

        <TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@android:color/holo_blue_dark"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewHeartRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/heart_rate" />

                <TextView
                    android:id="@+id/textViewHeartRateAvg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/average" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@android:color/holo_blue_dark"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewBP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blood_pressure" />

                <TextView
                    android:id="@+id/textViewBPAVG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/average" />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@android:color/holo_blue_dark"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewBG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blood_glucose" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/average" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@android:color/holo_blue_dark"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewOxygenSaturation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/oxygen_saturation" />

                <TextView
                    android:id="@+id/textViewOxygenSaturationAvg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/average" />
            </LinearLayout>

        </TableRow>
    </TableLayout>

</LinearLayout>